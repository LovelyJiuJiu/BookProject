<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boku.mapper.CollectMapper">
  <resultMap id="BaseResultMap" type="com.boku.pojo.Collect">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="book_id" jdbcType="INTEGER" property="bookId" />
  </resultMap>
  
  
  
  <select id="getCollectList" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select *
    from collect
    where user_id = #{userId,jdbcType=INTEGER}
  </select>
  
  
  
  <delete id="deleteBookInCollect">
  	delete from collect 
  	where user_id= #{1}
  	and book_id= #{0}
  </delete>
  
  
  <insert id="addBookInCollect">
    insert into collect(user_id,book_id)
    <trim prefix="values (" suffix=")" suffixOverrides=",">
    #{1},
    #{0},
    </trim>
  </insert>
</mapper>